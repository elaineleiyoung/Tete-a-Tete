<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.tete_a_tete.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.tete_a_tete.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_TopicFragment"
            app:destination="@id/topicFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_friendsTopics"
            app:destination="@id/friendsTopics" />
        <action
            android:id="@+id/action_SecondFragment_to_closeFriends"
            app:destination="@id/closeFriends" />
    </fragment>
    <fragment
        android:id="@+id/topicFragment"
        android:name="com.example.tete_a_tete.TopicFragment"
        android:label="fragment_topic"
        tools:layout="@layout/fragment_topic" >
        <action
            android:id="@+id/action_topicFragment_to_cardFragment"
            app:destination="@id/cardFragment" />
        <action
            android:id="@+id/action_topicFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/cardFragment"
        android:name="com.example.tete_a_tete.cardFragment"
        android:label="fragment_card"
        tools:layout="@layout/fragment_card" >
        <action
            android:id="@+id/action_cardFragment_to_topicFragment"
            app:destination="@id/topicFragment" />
    </fragment>
    <fragment
        android:id="@+id/friendsTopics"
        android:name="com.example.tete_a_tete.FriendsTopics"
        android:label="fragment_friends_topics"
        tools:layout="@layout/fragment_friends_topics" />
    <fragment
        android:id="@+id/closeFriends"
        android:name="com.example.tete_a_tete.closeFriends"
        android:label="fragment_close_friends"
        tools:layout="@layout/fragment_close_friends" />
</navigation>